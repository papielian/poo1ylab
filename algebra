import java.util.HashMap;
import java.util.Map;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Coordenadas de lugares turísticos en Zacatecas
        Map<String, double[]> lugaresTuristicos = new HashMap<>();
        lugaresTuristicos.put("Catedral de Zacatecas", new double[]{22.7755, -102.5721});
        lugaresTuristicos.put("Mina El Edén", new double[]{22.7698, -102.5583});
        lugaresTuristicos.put("Teleférico de Zacatecas", new double[]{22.7717, -102.5721});
        lugaresTuristicos.put("Cerro de la Bufa", new double[]{22.7848, -102.5766});
        lugaresTuristicos.put("Museo Rafael Coronel", new double[]{22.7707, -102.5775});

        // Solicitar la ubicación del usuario
        System.out.print("latitud recomendada: 22.4333 (alameda) \nIngresa tu latitud: ");
        double latitudUsuario = scanner.nextDouble();
        System.out.print("longitud recomendada: -101.467 (alameda) \nIngresa tu longitud: ");
        double longitudUsuario = scanner.nextDouble();

        // Calcular el ángulo entre la ubicación del usuario y cada lugar turístico
        Map<String, Double> angulos = new HashMap<>();
        for (Map.Entry<String, double[]> entry : lugaresTuristicos.entrySet()) {
            String lugar = entry.getKey();
            double[] coordenadas = entry.getValue();
            double[] u = {latitudUsuario, longitudUsuario};
            double[] v = coordenadas;
            double angulo = calcularAngulo(u, v);
            angulos.put(lugar, angulo);
        }

        // Ordenar los lugares turísticos de acuerdo al ángulo (de menor a mayor)
        angulos.entrySet().stream()
                .sorted(Map.Entry.comparingByValue())
                .forEachOrdered(entry -> System.out.println("- " + entry.getKey() + " (Ángulo: " + entry.getValue() + " grados)"));
    }

    public static double calcularAngulo(double[] u, double[] v) {
        double productoPunto = u[0] * v[0] + u[1] * v[1];
        double magnitudU = Math.sqrt(u[0] * u[0] + u[1] * u[1]);
        double magnitudV = Math.sqrt(v[0] * v[0] + v[1] * v[1]);
        double cosTheta = productoPunto / (magnitudU * magnitudV);
        double anguloRadianes = Math.acos(cosTheta);
        double anguloGrados = Math.toDegrees(anguloRadianes);
        return anguloGrados;
    }
}
